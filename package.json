{
  "name": "agent-spaces",
  "version": "0.3.0",
  "description": "Agent workspace manager for Claude, Codex, Gemini, and more",
  "main": "electron/dist/main.js",
  "bin": {
    "spaces": "./bin/spaces.js"
  },
  "files": [
    "bin/",
    ".next/standalone/"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlongo78/spaces.git"
  },
  "keywords": [
    "ai",
    "agent",
    "workspace",
    "terminal",
    "claude",
    "codex",
    "gemini"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "next dev --port 3457",
    "dev:desktop": "npm run compile && concurrently -n next,electron \"npm run dev\" \"wait-on http://127.0.0.1:3457 && electron .\"",
    "compile": "esbuild electron/main.ts --bundle --platform=node --outfile=electron/dist/main.js --external:electron --external:node-pty && esbuild electron/preload.ts --bundle --platform=node --outfile=electron/dist/preload.js --external:electron",
    "build": "cross-env ELECTRON=1 next build && npm run compile",
    "build:npm": "STANDALONE=1 next build && node -e \"const fs=require('fs');fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});fs.cpSync('public','.next/standalone/public',{recursive:true})\"",
    "build:community": "cross-env ELECTRON=1 NEXT_PUBLIC_TIER=community next build && npm run compile",
    "build:server": "cross-env NEXT_PUBLIC_TIER=server STANDALONE=1 next build && node -e \"const fs=require('fs');fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});fs.cpSync('public','.next/standalone/public',{recursive:true})\"",
    "build:team": "cross-env NEXT_PUBLIC_TIER=team STANDALONE=1 next build && node -e \"const fs=require('fs');fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});fs.cpSync('public','.next/standalone/public',{recursive:true})\"",
    "build:federation": "cross-env NEXT_PUBLIC_TIER=federation STANDALONE=1 next build && node -e \"const fs=require('fs');fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});fs.cpSync('public','.next/standalone/public',{recursive:true})\"",
    "prepublishOnly": "npm run build:npm",
    "pack": "npm run build && electron-builder --dir",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "setup-admin": "node bin/setup-admin.js",
    "server:build": "next build",
    "server:start": "next start --port 3457",
    "lint": "eslint",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3,node-pty"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "bonjour-service": "^1.3.0",
    "node-pty": "^1.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query": "^5.90.21",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "chokidar": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "date-fns": "^4.1.0",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "geist": "^1.4.1",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "otpauth": "^9.5.0",
    "posthog-js": "^1.352.0",
    "posthog-node": "^5.21.2",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "recharts": "^3.7.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3",
    "xterm": "^5.3.0"
  }
}
